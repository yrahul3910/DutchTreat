@model LoginModel
@{ 
    ViewBag.Title = "Login";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input class="form-control" asp-for="Username" />
                <span class="text-warning" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" type="password" />
                <span class="text-warning" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input class="checkbox-inline" asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">Remember me</label>
                <span class="text-warning" asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>